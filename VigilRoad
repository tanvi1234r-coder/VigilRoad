<body>

    <div class="app-container">
        <div class="header">
            <h1>VigilRoad <span style="color:white; font-weight:300;">AI</span></h1>
            <p>Professional Neural Detection for Road Safety</p>
        </div>

        <div class="mode-selector">
            <button id="btn-cam" class="mode-btn active">Live Tracking</button>
            <button id="btn-upload" class="mode-btn">Static Analysis</button>
        </div>

        <div class="view-frame">
            <div id="webcam-box"></div>
            <img id="img-preview" style="display:none;" />
        </div>

        <input type="file" id="file-input" accept="image/*">
        <button id="btn-action" class="btn-main">Initialize AI System</button>

        <div id="results" class="results-card">
            </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@tensorflow/tfjs@1.3.1/dist/tf.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@teachablemachine/image@0.8/dist/teachablemachine-image.min.js"></script>

    <script>
  
        const URL = "https://teachablemachine.withgoogle.com/models/XZiY88SdC/";
        
        let model, webcam, resultsBox, maxClasses;
        let isCamMode = true;

        // 1. Initialize System
        async function setupAI() {
            const modelURL = URL + "model.json";
            const metadataURL = URL + "metadata.json";
            
            model = await tmImage.load(modelURL, metadataURL);
            maxClasses = model.getTotalClasses();
            
            resultsBox = document.getElementById("results");
            resultsBox.innerHTML = "";
            
            // Create UI for results
            for (let i = 0; i < maxClasses; i++) {
                const group = document.createElement("div");
                group.className = "result-bar-group";
                group.innerHTML = `
                    <div class="label-row">
                        <span>${model.getClassLabels()[i]}</span>
                        <span class="pct-val">0%</span>
                    </div>
                    <div class="progress-container">
                        <div class="progress-fill"></div>
                    </div>
                `;
                resultsBox.appendChild(group);
            }
        }

        // 2. Webcam Logic
        async function startWebcam() {
            webcam = new tmImage.Webcam(500, 400, true);
            await webcam.setup();
            await webcam.play();
            document.getElementById("webcam-box").appendChild(webcam.canvas);
            window.requestAnimationFrame(updateLoop);
        }

        async function updateLoop() {
            if (isCamMode && webcam) {
                webcam.update();
                await runPrediction(webcam.canvas);
                window.requestAnimationFrame(updateLoop);
            }
        }

        // 3. Global Prediction Handler
        async function runPrediction(source) {
            const prediction = await model.predict(source);
            for (let i = 0; i < maxClasses; i++) {
                const probability = (prediction[i].probability * 100).toFixed(0);
                const row = resultsBox.childNodes[i];
                row.querySelector(".pct-val").innerText = probability + "%";
                row.querySelector(".progress-fill").style.width = probability + "%";
                
                // Visual Alert: Red if Pothole detected over 70%
                if (prediction[i].className.toLowerCase().includes("pothole") && probability > 70) {
                    row.querySelector(".progress-fill").style.background = "var(--danger)";
                } else {
                    row.querySelector(".progress-fill").style.background = ""; // Default
                }
            }
        }

        // 4. UI Events
        const mainBtn = document.getElementById("btn-action");
        const fileIn = document.getElementById("file-input");
        const camBtn = document.getElementById("btn-cam");
        const upBtn = document.getElementById("btn-upload");
        const imgPre = document.getElementById("img-preview");
        const webBox = document.getElementById("webcam-box");

        mainBtn.onclick = async () => {
            if (!model) {
                mainBtn.innerText = "System Loading...";
                await setupAI();
            }
            
            if (isCamMode) {
                mainBtn.style.display = "none";
                await startWebcam();
            } else {
                fileIn.click();
            }
        };

        camBtn.onclick = () => {
            isCamMode = true;
            camBtn.classList.add("active");
            upBtn.classList.remove("active");
            webBox.style.display = "block";
            imgPre.style.display = "none";
            mainBtn.innerText = "Start Live Tracking";
            mainBtn.style.display = "block";
            if(webcam) webcam.stop();
        };

        upBtn.onclick = () => {
            isCamMode = false;
            upBtn.classList.add("active");
            camBtn.classList.remove("active");
            webBox.style.display = "none";
            imgPre.style.display = "block";
            mainBtn.innerText = "Upload & Analyze Image";
            mainBtn.style.display = "block";
            if(webcam) webcam.stop();
        };

        fileIn.onchange = (e) => {
            const file = e.target.files[0];
            if (!file) return;
            const reader = new FileReader();
            reader.onload = (ev) => {
                imgPre.src = ev.target.result;
                imgPre.onload = async () => {
                    if(!model) await setupAI();
                    await runPrediction(imgPre);
                };
            };
            reader.readAsDataURL(file);
        };
    </script>
</body>
</html>
